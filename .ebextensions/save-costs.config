option_settings:
  # Remove the load balancer entirely
  aws:elasticbeanstalk:environment:
    EnvironmentType: SingleInstance
    ServiceRole: aws-elasticbeanstalk-service-role
  
  # Configure the single instance to have a public IP
  aws:autoscaling:launchconfiguration:
    AssociatePublicIpAddress: true
    InstanceType: t3.micro  # You can go smaller later
    SecurityGroups: default
  
  # Ensure health checks work without load balancer
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: basic
    EnhancedHealthAuthEnabled: false
  
  # Configure the instance to handle HTTP traffic directly
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /
    Port: 80
    Protocol: HTTP